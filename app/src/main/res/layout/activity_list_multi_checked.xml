    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnMultiChoseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chose info" />

    <TextView
        android:id="@+id/txtMultiChose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/listMultiChecked"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>